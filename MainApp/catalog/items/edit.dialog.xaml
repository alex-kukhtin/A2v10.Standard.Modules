<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" Title="@[Item]" Overflow="True" CssClass="edit-item-dialog">
	<Dialog.Buttons>
		<Button Style="Primary" Command="{BindCmd SaveAndClose, ValidRequired=True}" Content="@[SaveAndClose]" />
		<Button Command="{BindCmd Close}" Content="@[Cancel]" />
	</Dialog.Buttons>
	<Grid Rows="Auto, Auto, Auto, Auto" Columns="1*">
		<TextBox Value="{Bind Item.Name}" Label="@[Name]" Required="True" TabIndex="1" />
		<SelectorSimple Url="/catalog/units" Value="{Bind Item.Unit}" Label="@[Unit]" Width="12rem" Grid.Row="2" />
		<ComboBox ItemsSource="{Bind VatRates}" Value="{Bind Item.VatRate}" Label="@[VatRate]" Width="12rem" Grid.Row="3">
			<ComboBoxItem Content="{Bind Name}" Value="{Bind}" />
		</ComboBox>
		<TextBox Rows="3" Multiline="True" Value="{Bind Item.Memo}" Label="@[Memo]" Grid.Row="4" />
	</Grid>
</Dialog>