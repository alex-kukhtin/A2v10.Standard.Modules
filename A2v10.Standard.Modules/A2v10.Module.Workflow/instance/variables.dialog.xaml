<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
	  Title="@[WfAdm.Variables]" Width="40rem">
	<Dialog.Buttons>
		<Button Content="@[Close]" Command="{BindCmd Close}" />
	</Dialog.Buttons>

	<Grid MinHeight="25rem" Rows="1*">
		<Code Multiline="True" Content="{Bind Instance.State.Variables}"
			  Bold="True" Height="100%">
		</Code>
	</Grid>
</Dialog>